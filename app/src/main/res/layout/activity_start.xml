<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash"
    android:orientation="vertical"
    android:paddingBottom="7dp"
    android:weightSum="10">

    <android.support.v4.widget.Space
        android:id="@+id/activity_start_topSpace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.6" />

    <ImageView
        android:id="@+id/activity_start_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@drawable/ic_splash_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom|center"
            android:text="찬밥 신세"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top|center"
            android:paddingTop="4dp"
            android:text="#메뉴를 고르는 새로운 방법."
            android:textColor="#ffffff"
            android:textSize="15sp" />
    </LinearLayout>

    <android.support.v4.widget.Space
        android:id="@+id/activity_start_bottomSpace"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:weightSum="10">

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Button
            android:id="@+id/activity_start_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="8"
            android:background="@drawable/btn_transparent"
            android:text="시작하기"
            android:alpha="0.0"
            android:textColor="#ffffff"
            android:textSize="23sp" />
    </LinearLayout>

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.95" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="Copyright Oechyeoangmen 2017 All rights Reserved"
        android:textColor="#fff"
        android:textSize="10sp" />

</LinearLayout>