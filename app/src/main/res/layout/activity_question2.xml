<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGray"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.oechyeochangmen.chanbapsinse.Activity.Question2Activity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="10">

            <android.support.v4.widget.Space
                android:layout_width="@dimen/blank_margin"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.8"
                android:src="@drawable/ic_question_icon" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7.5"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/question2_question"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Question2"
                    android:textColor="#222222"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/question2_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="가격대를 선택해주세요.\n촤범 위도 설정할 수 있슴니다."
                    android:textColor="#222222"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical"
        android:weightSum="7">

        <TextView
            android:id="@+id/question2_rangeText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="#f0f0f0"
            android:gravity="center|start"
            android:paddingLeft="@dimen/blank_margin"
            android:text="가격 범위 입력"
            android:textColor="#222"
            android:textSize="19sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:background="#fff"
            android:paddingStart="@dimen/blank_margin"
            android:weightSum="9.5">

            <TextView
                android:id="@+id/question2_minText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="최소 비용"
                android:textColor="#222"
                android:textSize="16sp" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <EditText
                android:id="@+id/question2_minmoney"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_weight="4"
                android:gravity="center_vertical|right"
                android:inputType="number"
                android:maxLength="14"
                android:text="0"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/question2_won1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="₩"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:background="#fff"
            android:paddingStart="@dimen/blank_margin"
            android:weightSum="9.5">

            <TextView
                android:id="@+id/question2_maxText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="최대 비용"
                android:textColor="#222"
                android:textSize="16sp" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <EditText
                android:id="@+id/question2_maxmoney"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_weight="4"
                android:gravity="center_vertical|end"
                android:inputType="number"
                android:maxLength="14"
                android:text="0"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/question2_won2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="₩"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/question2_rangemoney"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:background="#fff"
            android:gravity="center"
            android:text="0 ₩ ~ 0 ₩"
            android:textColor="#4473ec"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/question2_errorText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:background="#f0f0f0"
            android:gravity="center|start"
            android:paddingStart="@dimen/blank_margin"
            android:text="오차 범위"
            android:textColor="#222"
            android:textSize="19sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:background="#fff"
            android:paddingLeft="@dimen/blank_margin"
            android:weightSum="9.5">

            <TextView
                android:id="@+id/question2_plusminus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="±"
                android:textColor="#222"
                android:textSize="20sp" />

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <EditText
                android:id="@+id/question2_errormoney"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_weight="4"
                android:gravity="center_vertical|right"
                android:inputType="number"
                android:maxLength="14"
                android:text="0"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/question2_won3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="₩"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorBaseBlue"
        android:weightSum="2">


        <Button
            android:id="@+id/question2_btn_prev"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/blank_margin"
            android:layout_marginRight="@dimen/blank_margin"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_transparent_white"
            android:text="이전"
            android:textColor="#ffffff"
            android:textSize="20sp" />


        <Button
            android:id="@+id/question2_btn_next"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/blank_margin"
            android:layout_marginRight="@dimen/blank_margin"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn_fill"
            android:text="다음"
            android:textColor="@color/colorBaseBlue"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
