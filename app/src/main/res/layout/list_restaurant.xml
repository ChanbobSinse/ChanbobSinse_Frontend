<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">


        <android.support.v4.widget.Space
            android:layout_width="@dimen/blank_margin"
            android:layout_height="90dp" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp">

                <TextView
                    android:id="@+id/restaurant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:maxLines="1"
                    android:maxWidth="210dp"
                    android:text="마카나이"
                    android:textColor="#222"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/restaurant_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|start"
                    android:layout_marginStart="7dp"
                    android:text="KoreanFood"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/restaurant_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="서울시 용산구 청파로 45길 11"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/restaurant_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="02-711-2016"
                android:textSize="12sp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left">

                <RatingBar
                    android:id="@+id/restaurant_ratingBar"
                    style="@style/starRatingBar"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:clickable="false"
                    android:isIndicator="true"
                    android:max="5"
                    android:numStars="5"
                    android:rating="3.5"
                    android:stepSize="0.3" />
            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/restaurant_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:scaleType="center"
            android:src="@drawable/ic_chevron_right_black_24dp" />
    </LinearLayout>
</LinearLayout>